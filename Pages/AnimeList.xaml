<Page
    x:Class="AnimeApp.Pages.AnimeList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AnimeApp.Pages"
    xmlns:classes="using:AnimeApp.Classes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Page.Resources>
        <Style TargetType="CheckBox">
            <Setter Property="MinWidth" Value="32"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="Height" Value="32"/>
        </Style>
    </Page.Resources>

    <RelativePanel>
        <Rectangle RelativePanel.AlignTopWithPanel="True"
                   RelativePanel.AlignLeftWithPanel="True"
                   RelativePanel.AlignBottomWithPanel="True"
                   RelativePanel.AlignRightWithPanel="True">
            <Rectangle.Fill>
                <AcrylicBrush TintColor="{ThemeResource SystemAltHighColor}"
                              TintOpacity="0.75"/>
            </Rectangle.Fill>
        </Rectangle>

        <Grid RelativePanel.AlignTopWithPanel="True"
              RelativePanel.AlignLeftWithPanel="True"
              RelativePanel.AlignBottomWithPanel="True"
              RelativePanel.AlignRightWithPanel="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"
                           MinHeight="40"
                           MaxHeight="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Height="40"
                    Grid.Row="0"
                    Orientation="Horizontal">
                <Button Background="Transparent"
                    Content="Watching (7)"
                    Height="40"/>
                <Button Background="Transparent"
                    Content="Completed (29)"
                    Height="40"/>
                <Button Background="Transparent"
                    Content="Paused (3)"
                    Height="40"/>
                <Button Background="Transparent"
                    Content="Dropped (2)"
                    Height="40"/>
                <Button Background="Transparent"
                    Content="Planning (183)"
                    Height="40"/>
            </StackPanel>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0"
                       Text="Cover"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1"
                       Text="Title"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

                <TextBlock Grid.Column="2"
                       Text="Progress"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
                <TextBlock Grid.Column="3"
                       Text="Score"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
                <TextBlock Grid.Column="4"
                       Text="Type"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
                <TextBlock Grid.Column="5"
                       Text="Season"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

                <Border BorderThickness="1"
                    Height="1"
                    BorderBrush="Gray"
                    Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="6"
                    Margin="0, 0, 0, 4"/>

                <!-- Item 1 -->

                <Image Source="https://s4.anilist.co/file/anilistcdn/media/anime/cover/large/bx4224-ARdWFsE4yyKU.jpg"
                   Grid.Column="0"
                   Grid.Row="2"/>
                <TextBlock Text="トラどら"
                       Grid.Column="1"
                       Grid.Row="2"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
                <StackPanel Orientation="Vertical"
                        Grid.Column="2"
                        Grid.Row="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                    <TextBlock Text="13/25"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="-"
                            Padding="0"
                            Width="20"/>
                        <ProgressBar Width="120"
                                 Margin="4, 0, 4, 0"
                                 Value="52"/>
                        <Button Content="+"
                            Padding="0"
                            Width="20"/>
                    </StackPanel>
                </StackPanel>

                <TextBlock Grid.Column="3"
                       Grid.Row="2"
                       Text="100"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

                <TextBlock Grid.Column="4"
                       Grid.Row="2"
                       Text="TV"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

                <TextBlock Grid.Column="5"
                       Grid.Row="2"
                       Text="Summer 2020"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

                <!-- Item 2-->

                <Image Source="https://www.atomix.com.au/media/2017/07/StockPhotoBanner.jpg"
                   Grid.Column="0"
                   Grid.Row="3"/>
                <TextBlock Text="abla2"
                       Grid.Column="1"
                       Grid.Row="3"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
                <StackPanel Orientation="Vertical"
                        Grid.Column="2"
                        Grid.Row="3"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                    <TextBlock Text="7/13"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="-"
                            Padding="0"
                            Width="20"/>
                        <ProgressBar Width="120"
                                 Margin="4, 0, 4, 0"
                                 Value="54"/>
                        <Button Content="+"
                            Padding="0"
                            Width="20"/>
                    </StackPanel>
                </StackPanel>

                <TextBlock Grid.Column="3"
                       Grid.Row="3"
                       Text="64"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

                <TextBlock Grid.Column="4"
                       Grid.Row="3"
                       Text="Movie"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

                <TextBlock Grid.Column="5"
                       Grid.Row="3"
                       Text="Fall 7"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

                <!-- Item 3 -->

                <Image Source="https://i.ytimg.com/vi/3tleO8QtVTE/maxresdefault.jpg"
                   Grid.Column="0"
                   Grid.Row="4"/>
                <TextBlock Text="Comi o cu de quem tá lendo"
                       Grid.Column="1"
                       Grid.Row="4"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
                <StackPanel Orientation="Vertical"
                        Grid.Column="2"
                        Grid.Row="4"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                    <TextBlock Text="999/5"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="-"
                            Padding="0"
                            Width="20"/>
                        <ProgressBar Width="120"
                                 Margin="4, 0, 4, 0"
                                 Value="100"/>
                        <Button Content="+"
                            Padding="0"
                            Width="20"/>
                    </StackPanel>
                </StackPanel>

                <TextBlock Grid.Column="3"
                       Grid.Row="4"
                       Text="-73"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

                <TextBlock Grid.Column="4"
                       Grid.Row="4"
                       Text="Music"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

                <TextBlock Grid.Column="5"
                       Grid.Row="4"
                       Text="Winter 2020"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

                <!-- Item 4 -->

                <Image Source="https://media.discordapp.net/attachments/472313197836107780/651576210194956298/3spsiuX.png"
                   Grid.Column="0"
                   Grid.Row="5"/>
                <TextBlock Text="おｋ"
                       Grid.Column="1"
                       Grid.Row="5"
                       VerticalAlignment="Center"
