                <!-- Item 5 -->

                <Image Source="https://i.redd.it/jroxokb61ew11.jpg"
                   Grid.Column="0"
                   Grid.Row="6"/>
                <TextBlock Text="User moonrunes"
                       Grid.Column="1"
                       Grid.Row="6"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
                <StackPanel Orientation="Vertical"
                        Grid.Column="2"
                        Grid.Row="6"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                    <TextBlock Text="0/99999"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="-"
                            Padding="0"
                            Width="20"/>
                        <ProgressBar Width="120"
                                 Margin="4, 0, 4, 0"
                                 Value="0"/>
                        <Button Content="+"
                            Padding="0"
                            Width="20"/>
                    </StackPanel>
                </StackPanel>

                <TextBlock Grid.Column="3"
                       Grid.Row="6"
                       Text="0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

                <TextBlock Grid.Column="4"
                       Grid.Row="6"
                       Text="TV"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

                <TextBlock Grid.Column="5"
                       Grid.Row="6"
                       Text="Fall 5"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

                <!-- Item 6 -->

                <Image Source="https://images-ext-1.discordapp.net/external/aHlhBgKbdnF1oyVtF0X-0Cj9Dd0JzQ2aqHMeWJWGwnA/https/media.discordapp.net/attachments/472313197836107780/650906113893597197/o1So3UP.png"
                   Grid.Column="0"
                   Grid.Row="7"/>
                <TextBlock Text="hgdfhdfhfdおｋ"
                       Grid.Column="1"
                       Grid.Row="7"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
                <StackPanel Orientation="Vertical"
                        Grid.Column="2"
                        Grid.Row="7"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                    <StackPanel Orientation="Horizontal">
                        <Button Content="-"
                            Padding="0"
                            Width="20"/>
                        <TextBlock Text="7/?"
                               Width="120"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               TextAlignment="Center"/>
                        <Button Content="+"
                            Padding="0"
                            Width="20"/>
                    </StackPanel>
                </StackPanel>

                <TextBlock Grid.Column="3"
                       Grid.Row="7"
                       Text="0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

                <TextBlock Grid.Column="4"
                       Grid.Row="7"
                       Text="ONA"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

                <TextBlock Grid.Column="5"
                       Grid.Row="7"
                       Text="Spring 0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            </Grid>
        </Grid>
    </RelativePanel>
</Page>
