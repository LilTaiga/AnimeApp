                        Grid.Column="2"
                        Grid.Row="5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Button Content="-"
                            Padding="0"
                            Width="20"/>
                        <TextBlock Text="0/?"
                               Width="120"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               TextAlignment="Center"/>
